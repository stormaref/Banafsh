<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/grad"
    tools:context=".views.ChooseActivity">

    <Button
        android:id="@+id/firstBtn"
        android:layout_width="200dp"
        android:layout_height="70dp"
        android:layout_marginStart="162dp"
        android:layout_marginTop="189dp"
        android:layout_marginEnd="162dp"
        android:background="@drawable/radius"
        android:text="@string/riazi"
        android:textColor="#fff"
        android:textSize="30dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/secBtn"
        android:layout_width="200dp"
        android:layout_height="70dp"
        android:layout_marginStart="162dp"
        android:layout_marginTop="90dp"
        android:layout_marginEnd="162dp"
        android:background="@drawable/radius"
        android:text="@string/tajrobi"
        android:textColor="#fff"
        android:textSize="30dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/firstBtn" />

    <Button
        android:id="@+id/thirdBtn"
        android:layout_width="200dp"
        android:layout_height="70dp"
        android:layout_marginStart="162dp"
        android:layout_marginTop="90dp"
        android:layout_marginEnd="162dp"
        android:background="@drawable/radius"
        android:text="@string/ensani"
        android:textColor="#fff"
        android:textSize="30dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/secBtn" />
</android.support.constraint.ConstraintLayout>